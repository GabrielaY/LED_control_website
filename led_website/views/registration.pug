html
    head
        title= "PixieColor"
        link(rel="preconnect" href="https://fonts.gstatic.com")
        link(href="https://fonts.googleapis.com/css2?family=Roboto+Condensed:ital,wght@0,700;1,400&display=swap" rel="stylesheet")

    body
        block content
            .main.container
                .row
                    .col-md-6.col-md-offset-3
                        div.container
                            before
                            p.moto REGISTER TO BEGIN
                            after

                        // register form
                        form.forma(method='POST' action='/register')
                            div.form-group
                                input.in#email.form-control(type='email', placeholder='name@email.com', name='email', value=email)
                                if er_mail
                                    p=er_mail
                            div.form-group
                                input.in#pw.form-control(type='password',placeholder='password', name='password', value=password)
                                if er_password_weak
                                    p=er_password_weak
                            div.form-group
                                input.in#pw2.form-control(type='password',placeholder='confirm password ', name='confirmPassword')
                                if er_not_match
                                    p=er_not_match
                            button.bt.btn.btn-primary(type='submit') REGISTER
    style.
        body {
            background: rgb(185, 93, 161);
            display: flex;
            justify-content: center;
            flex-direction: column;
            align-items: center;
            background: linear-gradient(0deg, rgba(185, 93, 161, 1) 0%, rgba(211, 51, 51, 1) 100%);
            margin: 0;
        }

        .forma {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .form-group {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .in {
            background-color: white;
            border: none;
            margin-top: 7px;
            min-width: 300px;
            padding: 15px 10px;
        }

        .moto {
            width: 100%;
            text-align: center;
            font-family: 'Roboto Condensed', sans-serif;
            color: white;
            font-size: 13pt;

        }

        before,
        after {
            background-color: white;
            content: "";
            opacity: 70%;
            display: inline-block;
            height: 1px;
            position: relative;
            vertical-align: middle;
            width: 80%;
            color: white;
        }

        .bt {
            background-color: transparent;
            border: solid 2px white;
            margin: 18px 0;
            min-width: 350px;
            min-height: 38px;
            font-family: 'Roboto Condensed', sans-serif;
            font-size: 1.3em;
            padding: 4px 29px;
            color: white;
        }

        .bt:hover {
            background-color: white;
            color: #333333;
            transition: 300ms;
        }

        .container {
            display: flex;
            flex-direction: row;
            align-items: center;
            min-width: 560px;
            margin-top: 2em;
        }
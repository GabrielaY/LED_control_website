html
    head
        title= "PixieColor"
    body
        block content
            .main.container
                .row
                    .col-md-6.col-md-offset-3
                        h1.display-4.m-b-2 Sign Up

                        // register form
                        form(method='POST' action='/register')
                            div.form-group
                                label(for='email') Email:
                                input#email.form-control(type='email', placeholder='name@email.com', name='email', value=email)
                                p=er_mail
                            div.form-group
                                label(for='pw') Password:
                                input#pw.form-control(type='password', name='password', value=password)
                                p=er_password_weak
                            div.form-group
                                label(for='pw2') Confirm Password:
                                input#pw2.form-control(type='password', name='confirmPassword')
                                p=er_not_match
                            button.btn.btn-primary(type='submit') Sign up
html
    head
        title= "PixieColor"
        link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css")
    body
        if things
            each thing in things
                a(href="/things/" + thing.key)
                    button.bt(type="button")=thing.value + " ID: " + thing.key

        a(href="/registerDevice")
            span.fa-stack.stack
                i.fa.top-circle.fa-circle-thin.fa-stack-2x(aria-hidden='true')
                i.fa.fa-plus.fa-stack-1x.plus(aria-hidden='true')
    style.

        body {
            background: rgb(185, 93, 161);
            display: flex;
            justify-content: center;
            flex-direction: column;
            align-items: center;
            background: linear-gradient(0deg, rgba(185, 93, 161, 1) 0%, rgba(211, 51, 51, 1) 100%);
            margin: 0;
        }
        .bt {
            background-color: transparent;
            border: solid 2px white;
            margin: 5px 0;
            min-width: 350px;
            min-height: 38px;
            font-family: 'Roboto Condensed', sans-serif;
            font-size: 1.3em;
            text-align: left;
            padding: 4px 29px;
            color: white;
        }

        .bt:hover {
            background-color: white;
            color: #333333;
            transition: 300ms;
        }
        .stack {
            color: white;
        }

        .stack:hover {
            opacity: 80%;
            transition: 300ms;
        }